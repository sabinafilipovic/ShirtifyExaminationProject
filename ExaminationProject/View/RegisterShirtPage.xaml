<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExaminationProject.View.RegisterShirtPage"
             Title="">

    <AbsoluteLayout>
        <!-- Scrollbart -->
        <ScrollView AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                    AbsoluteLayout.LayoutFlags="All">
            
            <StackLayout 
                         Padding="0" 
                         Spacing="10">

                <Grid Padding="0" 
                      RowDefinitions="Auto, Auto" 
                      ColumnDefinitions="Auto, 1*">
                    
                    <Label HorizontalOptions="Fill"
                           Text="Registrera trÃ¶ja" 
                           HorizontalTextAlignment="Center"
                           FontSize="25" 
                           BackgroundColor="#dbf5ff" 
                           FontFamily="PoppinsMedium" 
                           Padding="10" />

                    <Grid Grid.Row="1" 
                          Padding="15" 
                          RowDefinitions="Auto, Auto" 
                          ColumnDefinitions="auto, Auto">
                        
                        <Image Grid.Row="0" 
                               Grid.Column="0" 
                               HorizontalOptions="Start" 
                               Margin="5" HeightRequest="200"
                               WidthRequest="200"
                               Source="{Binding PictureFilepath}" />

                        <VerticalStackLayout Grid.Row="0" 
                                             Grid.Column="1" 
                                             VerticalOptions="End" 
                                             Margin="1">
                            
                            <Button Text="ðŸ“· Ta foto" 
                                    FontSize="20" Padding="1" 
                                    Margin="5" 
                                    BackgroundColor="Orange" 
                                    Command="{Binding CapturePhotoCommand}" />
                            
                            <Button Text="ðŸ“‚ Ladda upp foto" 
                                    FontSize="20" 
                                    Padding="1" 
                                    Margin="5"
                                    BackgroundColor="Orange"
                                    Command="{Binding SelectPhotoCommand}" />
                            
                        </VerticalStackLayout>
                    </Grid>
                </Grid>

                <Grid Padding="10" 
                      RowDefinitions="Auto, Auto, Auto" 
                      ColumnDefinitions="Auto, 1*" 
                      Background="#f0f0f0">
                    
                    <Label Text="FÃ¤rg:" 
                           HorizontalOptions="Start" 
                           FontSize="21" 
                           FontFamily="PoppinsMedium" 
                           Padding="10"/>
                    
                    <Picker Grid.Column="1" 
                            Title="VÃ¤lj fÃ¤rg          " 
                            ItemsSource="{Binding Colors}" 
                            ItemDisplayBinding="{Binding Name}"
                            SelectedItem="{Binding SelectedColor}" 
                            HorizontalOptions="Start" 
                            FontSize="20" 
                            FontFamily="PoppinsMedium"/>

                    <Label Grid.Row="1" 
                           Text="Kategori:" 
                           HorizontalOptions="Start" 
                           FontSize="21" 
                           FontFamily="PoppinsMedium" 
                           Padding="10"/>
                    
                    <Picker Grid.Row="1" 
                            Grid.Column="1" 
                            Title="VÃ¤lj kategori   " 
                            ItemsSource="{Binding Categories}" 
                            ItemDisplayBinding="{Binding Name}"
                            SelectedItem="{Binding SelectedCategory}" 
                            HorizontalOptions="Start" 
                            FontSize="20" 
                            FontFamily="PoppinsRegular" />

                    <Label Grid.Row="2" 
                           Text="Beskrivning:" 
                           HorizontalOptions="Start" 
                           FontSize="21"
                           FontFamily="PoppinsMedium" 
                           Padding="10"/>
                    
                    <Entry 
                        Grid.Row="2" 
                        Grid.Column="1" 
                        Placeholder="Namn.." 
                        Text="{Binding ShirtBrand}" 
                        HorizontalOptions="Start" 
                        FontSize="20" 
                        FontFamily="PoppinsRegular"/>
                </Grid>
            </StackLayout>
        </ScrollView>

        <!-- Dockade knappar lÃ¤ngst ner, FLYTTA EJ -->
        <StackLayout AbsoluteLayout.LayoutBounds="0, 1, 1, AutoSize"
                     AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional" 
                     Orientation="Horizontal" 
                     HorizontalOptions="FillAndExpand"
                     Padding="10" 
                     Spacing="10"
                     BackgroundColor="#dbf5ff">

            <Button Text="LÃ¤gg till trÃ¶ja" 
                    Command="{Binding AddShirtCommand}" 
                    CommandParameter="{Binding PictureId}"
                    Margin="5" 
                    BackgroundColor="#a5c4a9" 
                    TextColor="Black" 
                    FontSize="24" 
                    FontFamily="Chewy"/>
            <Button Text="Garderob" 
                    Command="{Binding GoBackCommand}" 
                    Margin="5" 
                    BackgroundColor="#b4d2de"
                    TextColor="Black" 
                    FontSize="24" 
                    FontFamily="Chewy"/>
            
        </StackLayout>

    </AbsoluteLayout>
</ContentPage>
