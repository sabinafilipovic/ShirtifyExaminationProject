<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExaminationProject.View.InventoryPage"
             Title="Inventory Page">
    <ScrollView>
        <StackLayout Padding="0" Spacing="10">
            <Label Text="Garderob" 
                   HorizontalOptions="Center" 
                   FontSize="23"
                   BackgroundColor="#dbf5ff" 
                   FontFamily="Chewy"
                   Padding="10"/>

            <Grid Padding="10" HorizontalOptions="Center" RowDefinitions="Auto, Auto" ColumnDefinitions="Auto, auto, auto">
                            
                                <ImageButton
                                    Margin="10"
                                    BorderWidth="2" 
                                    BorderColor="Black" 
                                    HeightRequest="100" 
                                    WidthRequest="100" 
                                    Source="lufttorka.png"
                                    BackgroundColor="LightBlue"
                                    />
                                
                                <ImageButton 
                                    Grid.Column="1"
                                    
                                    Margin="10"
                                    BorderWidth="2" 
                                    BorderColor="Black" 
                                    HeightRequest="100" 
                                    WidthRequest="100" 
                                    Source="maskintvatt_1.png"
                                    BackgroundColor="LightBlue"
                                    />
                                <ImageButton 
                                    Grid.Column="2"
                                    
                                    Margin="10"
                                    BorderWidth="2" 
                                    BorderColor="Black" 
                                    HeightRequest="100" 
                                    WidthRequest="100" 
                                    Source="torktumlas.png"
                                    BackgroundColor="LightBlue"
                                    />
                           
                       
                    
                

            </Grid>
            
            <Grid Padding="0" RowDefinitions="Auto, Auto" ColumnDefinitions="Auto, 1*">

                <BoxView Grid.ColumnSpan="2" Color="DarkBlue">

                </BoxView>

                <Button WidthRequest="250" 
                        Text="Använd Tröja" 
                        Command="{Binding UseShirtCommand}" 
                        Margin="5" 
                        BackgroundColor="#b4d2de" 
                        FontSize="20" 
                        FontFamily="Chewy"/>

                <Button 
                    Grid.Row="0" 
                    Grid.Column="1" 
                    Text="Ny Tröja" 
                    Command="{Binding RegisterNewShirtCommand}" 
                    Margin="5" 
                    BackgroundColor="Beige" 
                    FontSize="20" 
                    TextColor="Black"
                    FontFamily="Chewy"/>




            </Grid>

        </StackLayout>
    </ScrollView>
</ContentPage>