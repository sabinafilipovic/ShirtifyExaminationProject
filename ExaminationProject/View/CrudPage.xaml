<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ExaminationProject.ViewModel"
             xmlns:model="clr-namespace:ExaminationProject.Model"
             x:DataType="viewmodel:CrudViewModel"
             x:Class="ExaminationProject.CrudPage"
             Title="CRUD Operations">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Entry Placeholder="Enter Shirt Name" Text="{Binding ShirtName}" FontSize="18"/>
            <Entry Placeholder="Enter Shirt Color" Text="{Binding ShirtColor}" FontSize="18"/>

            <Button Text="Add Shirt" Command="{Binding AddShirtCommand}" BackgroundColor="#91b597" FontSize="18"/>

            <CollectionView ItemsSource="{Binding Shirts}" Margin="0,20,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Shirt">
                        <Frame BorderColor="Gray" Padding="10" Margin="0,5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Id}" FontSize="14" TextColor="Gray"/>
                                <Label Text="{Binding Name}" FontSize="16"/>
                                <Label Text="{Binding Color}" FontSize="16"/>
                                <HorizontalStackLayout Spacing="10">
                                    <Button Text="Edit" Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:CrudViewModel}}, Path=EditShirtCommand}" CommandParameter="{Binding Id}" BackgroundColor="Orange"/>
                                    <Button Text="Delete" Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:CrudViewModel}}, Path=DeleteShirtCommand}" CommandParameter="{Binding Id}" BackgroundColor="Red" TextColor="White"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>