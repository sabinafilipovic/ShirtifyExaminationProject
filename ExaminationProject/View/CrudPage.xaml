<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ExaminationProject.ViewModel"
             xmlns:model="clr-namespace:ExaminationProject.Model"
             x:Class="ExaminationProject.CrudPage"
             x:DataType="viewmodel:CrudViewModel"
             Title="Manage Shirts">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Add New Shirt -->
            <Entry Placeholder="New Shirt Name"
                   Text="{Binding ShirtBrand}" />

            <Picker Title="Select Category"
                    ItemsSource="{Binding Categories}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedCategory}" />

            <Picker Title="Select Color"
                    ItemsSource="{Binding Colors}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedColor}" />

            <Button Text="Add Shirt"
                    Command="{Binding AddShirtCommand}" />

            <!--Picture elements for both adding shirt and edit shirt-->
            <Image Source="{Binding PictureFilepath}" HeightRequest="100" WidthRequest="100" Aspect="AspectFit" />

            <HorizontalStackLayout Spacing="10">
                <Button Text="ðŸ“· Take Photo"
            Command="{Binding CapturePhotoCommand}" />
                <Button Text="ðŸ“‚ Choose from Gallery"
            Command="{Binding SelectPhotoCommand}" />
            </HorizontalStackLayout>

            <!-- Edit Selected Shirt -->
            <Entry Placeholder="Edit Selected Shirt Name"
                   Text="{Binding SelectedShirt.Brand}" />

            <Picker Title="Edit Category"
                    ItemsSource="{Binding Categories}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedCategory}" />

            <Picker Title="Edit Color"
                    ItemsSource="{Binding Colors}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedColor}" />

            <Button Text="Edit Selected Shirt"
                    Command="{Binding EditShirtCommand}" />

            <!-- Shirts List -->
            <Label Text="Shirts" FontSize="20" />

            <CollectionView ItemsSource="{Binding Shirts}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedShirt}"
                            HeightRequest="400">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Shirt">
                        <HorizontalStackLayout Padding="10" Spacing="10">
                            <Label Text="{Binding Brand}" VerticalOptions="Center" />
                            <Label Text="{Binding Category_Name}" VerticalOptions="Center" />
                            <Label Text="{Binding Color_Name}" VerticalOptions="Center" />
                            <Button Text="Delete"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:CrudViewModel}}, Path=DeleteShirtCommand}"
                                    CommandParameter="{Binding .}" />
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Go Back -->
            <Button Text="Go to Home"
                    Command="{Binding GoBackCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
